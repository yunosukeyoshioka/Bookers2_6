	
<!--エラーメッセージ-->
	<% if @book.errors.any? %>
		<div id="error_explanation" class="alert alert-danger">
			<h3><%= pluralize(@book.errors.count, "個のエラーがあります") %></h3>
			<ul>
			 <% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
	 </div>
	<% end %>


<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">				
				<h1>Editing Book</h1>
				<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
				<div class="field row">
					<div class="col-xs-12">
						<h4>Title</h4>
						<div class="col-xs-12">
				  	<%= f.text_field :title, class:"form-control col-xs-12" %>
					</div>	
				</div>
				<div class="field row">
					<h4>Option</h4>
					<div class="col-xs-12">
				  	
				  	<%= f.text_area :body, class:"form-control col-xs-12" %>
					</div>
				</div>
				<div class="field row">
					<div class="col-xs-12">
				  	<%= f.submit 'Update Book', class:"btn btn-primary col-xs-12" %>   
						<% end %>
					</div>
				</div>	
				<div class="field row">
					<div class="col-xs-12">
					<%= link_to 'Show', book_path(@book) %>|
					<%= link_to 'Back', books_path %>
				</div>
			</div>
		</div>
	</div>
</div>



