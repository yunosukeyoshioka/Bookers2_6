  <!--エラーメッセージ-->

  <div class="body">
    <div class="container">
     <div class="row">
      <div class="profiles col-xs-3">
         <h1>User info</h1>
        <%= form_for(@user) do |f| %>
          
        <!--Name-->  
            <div class="field"> 
               <p><strong>Name</strong></p>
          	   <label class="control-label sr-only" for="inputName">Name</label>
          	   <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName"%>
           	</div>
          <!--Image-->
            <div class="field"> 
            	 <p><strong>Image</strong></p>	
          	  <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
          	  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
            </div>
          <!--Introduction-->
            <div class="field"> 
              <p><strong>Introduction</strong></p>
              <label class="control-label sr-only" for="inputName">Introduction</label>
              <%= f.text_area :introduction, autofocus: true, class:"form-control", id:"inputArea"%>
            </div>  
    <!--submit-->
        <%= f.submit "Update User", class:"btn btn-light" %>
      <% end %>
    </div>
  </div>
 </div>
</div>